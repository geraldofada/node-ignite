{
  "name": "node-ignite",
  "version": "0.0.1",
  "description": "A simple NodeJS boilerplate",
  "main": "index.js",
  "scripts": {
    "execute": "nodemon src/index.js --use-strict",
    "test": "jest --watch",
    "lint": "watch \"eslint src/ --quiet \" ",
