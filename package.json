{
  "name": "node-ignite",
  "version": "0.1.0",
  "description": "A simple NodeJS boilerplate",
  "main": "main.js",
  "scripts": {
    "prebuild": "esbuild ./src/main.ts --bundle --platform=node --outfile=./build/out.js",
    "start": "npm run prebuild && node ./build/out.js",
    "watch": "nodemon ./src/main.ts",
    "build": "rimraf ./build && npm run prebuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geraldofada/node-ignite.git"
  },
  "keywords": [
    "boilerplate",
    "nodejs",
    "node",
    "js",
    "ts"
  ],
  "author": "Geraldo Fada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geraldofada/node-ignite/issues"
  },
  "homepage": "https://github.com/geraldofada/node-ignite#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "esbuild": "^0.12.9",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "typescript": "^3.4.5"
  }
}
